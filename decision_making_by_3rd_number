#include <stdio.h>
int main(){
printf("This program needs 3 initial digit(s) and make some decisions according to them\n\n");

int i,j,z,k;
printf("Please enter 1st number: ");
scanf("%d",&i);
printf("Please enter 2n nummber: ");
scanf("%d",&j);
printf("Please enter 3rd number: ");
scanf("%d",&z);

if (z<0)
z=-1;

switch(z){
case -1:
       printf("The Difference between 1st and 2nd number is: %d\n", j-i);
	break;
case 0: 
       printf("The Summation of 1st and 2nd number result is: %d\n", i+j);
	break;
default: 
       printf("The 1st number multiply by 2nd number result is: %d\n", i*j);
}
return 0;

}
